@model IEnumerable<OverviewViewModel>

@{
    ViewData["Title"] = "Overview";
    Layout = "_LayoutOverview";
}
<h1>Garage Overview</h1>

<table class="table">
    <thead>
        <tr>
            <th> <a asp-action="Overview" asp-route-sortingVehicle="@ViewData["VehicleTypeSorting"]">@Html.DisplayNameFor(model => model.VehicleType)</a> </th>
            <th> <a asp-action="Overview" asp-route-sortingVehicle="@ViewData["RegistrationNumberSorting"]">@Html.DisplayNameFor(model => model.VehicleRegistrationNumber)</a> </th>
            <th> <a asp-action="Overview" asp-route-sortingVehicle="@ViewData["ArrivalTimeSorting"]">@Html.DisplayNameFor(model => model.VehicleArrivalTime)</a> </th>
            <th> <a asp-action="Overview" asp-route-sortingVehicle="@ViewData["DurationParkedSorting"]">@Html.DisplayNameFor(model => model.VehicleParkDuration)</a> </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>  @Html.DisplayFor(modelItem => item.VehicleType)  </td>
            <td>  @Html.DisplayFor(modelItem => item.VehicleRegistrationNumber)  </td>
            <td>  @Html.DisplayFor(modelItem => item.VehicleArrivalTime)  </td>
            <td>  @Html.DisplayFor(modelItem => item.VehicleParkDuration) </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.VehicleId">Details</a>
                <a asp-action="Change" asp-route-id="@item.VehicleId">Change</a> |           
                <a asp-action="Delete" asp-route-id="@item.VehicleId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
