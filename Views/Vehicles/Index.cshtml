@model IEnumerable<Garage2._0.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}

@{Layout = "~/Views/Shared/_LayoutOverview.cshtml";}

<h1>Administration view</h1>



<table class="table">
    <thead>
        <tr>
            <th>
                <form asp-action="Order" asp-route-id="1">
                    <button type="submit" class="btn btn-primary orderButton">&darr;</button>
                </form>
            </th>
            <th>
                <form asp-action="Order" asp-route-id="2">
                    <button type="submit" class="btn btn-primary orderButton">&darr;</button>
                </form>
            </th>
            <th>
                <form asp-action="Order" asp-route-id="3">
                    <button type="submit" class="btn btn-primary orderButton">&darr;</button>
                </form>
            </th>
            <th>
                <form asp-action="Order" asp-route-id="4">
                    <button type="submit" class="btn btn-primary orderButton">&darr;</button>
                </form>
            </th>
            <th>
                <form asp-action="Order" asp-route-id="5">
                    <button type="submit" class="btn btn-primary orderButton">&darr;</button>
                </form>
            </th>
            <th>
                <form asp-action="Order" asp-route-id="6">
                    <button type="submit" class="btn btn-primary orderButton">&darr;</button>
                </form>
            </th>
            <th>
                <form asp-action="Order" asp-route-id="7">
                    <button type="submit" class="btn btn-primary orderButton">&darr;</button>
                </form>
            </th>
            <th>
                <form asp-action="Order" asp-route-id="8">
                    <button type="submit" class="btn btn-primary orderButton">&darr;</button>
                </form>
            </th>
        </tr>
        <tr>
            <th>               
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th>             
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>              
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>                
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>              
                @Html.DisplayNameFor(model => model.VehicleModel)
            </th>
            <th>               
                @Html.DisplayNameFor(model => model.NumberOfWheels)
            </th>
            <th>               
                @Html.DisplayNameFor(model => model.IsParked)
            </th>
            <th>               
                @Html.DisplayNameFor(model => model.TimeOfArrival)
            </th>
            <th>
                <form asp-action="Park">
                    <button type="submit" class="btn btn-primary" asp-action="Park">Park a vehicle</button>
                </form>
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleModel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfWheels)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsParked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOfArrival)
                </td>
                <td>
                    <a asp-action="Change" asp-route-id="@item.Id">Change</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
